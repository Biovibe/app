{
  "name": "biovibe",
  "version": "1.0.0",
  "description": "BioVibe - Your wellness companion for stress management and mindfulness",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "build": "node build.js",
    
    "cap:init": "npx cap init BioVibe com.biovibe.app --web-dir www",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    
    "cap:run:android": "npx cap run android",
    "cap:run:ios": "npx cap run ios",
    
    "android": "npm run build && npm run cap:sync && npm run cap:open:android",
    "ios": "npm run build && npm run cap:sync && npm run cap:open:ios",
    
    "mobile:build": "npm run build && npm run cap:sync"
  },
  "keywords": [
    "wellness",
    "stress-management",
    "mindfulness",
    "mental-health",
    "eeg",
    "biofeedback"
  ],
  "author": "BioVibe Team",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "typescript": "^5.0.0"
  }
}
